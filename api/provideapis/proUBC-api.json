    },
    "/proubc/auth": {
      "get": {
        "tags": [
          "default"
        ],
        "summary": "Authenticate",
        "description": "Authenticate a user by email address and password, returning a newly-authorized X-CSRF-Token token",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "parameters": [
          {
            "name": "X-CSRF-Token",
            "in": "header",
            "schema": {
              "type": "string"
            },
            "example": "Fetch"
          },
          {
            "name": "Authorization",
            "in": "header",
            "schema": {
              "type": "string"
            },
            "example": "Basic dW5pYnJpZ2h0OnVuaWJyaWdodA=="
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
